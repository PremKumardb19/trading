<div class="auth-container">
  <h2>Register</h2>
<form id="registerForm">
  {{input type="text" placeholder="Username" value=this.username required="required"}}
  {{input type="email" placeholder="Email" value=this.email required="required"}}
  {{input type="password" placeholder="Password" value=this.password required="required"}}
  <button type="submit">Register</button>
  <p>Have an account already?<a href="/login">Login</a></p>
</form>

</div>