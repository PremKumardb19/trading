<div style="text-align:right; margin-right: 5%; margin-top: 10px;">
  {{#link-to "funding" class="get-funds-button"}}Get Funds{{/link-to}}
  <button {{action "logout"}} class="logout-button" style="margin-left: 15px;">Logout</button>

</div>
<h2 style="text-align:center; color:#2c3e50;">Live Crypto Dashboard</h2>

<table style="width:90%; margin:auto; border-collapse: collapse; font-family: Arial;">
  <thead>
    <tr style="background-color: #34495e; color: white;">
      <th style="padding: 12px;">Name</th>
      <th>Price (USD)</th>
      <th>Change (%)</th>
    </tr>
  </thead>
  <tbody>
    {{#each model.cryptos as |crypto|}}
     <tr  {{action "goToCrypto" crypto.id crypto.priceUsd crypto.changePercent24Hr}} style="cursor:pointer;" onmouseover="this.style.background='#f4f4f4'" onmouseout="this.style.background='white'">

        <td style="padding: 10px;">{{crypto.name}}</td>
        <td>${{crypto.priceUsd}}</td>
<td style="color:{{if (is-negative crypto.changePercent24Hr) "red" "green"}};">
  {{crypto.changePercent24Hr}}%
</td>

      </tr>
    {{/each}}
  </tbody>
</table>

<br/>


