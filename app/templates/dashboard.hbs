<div style="text-align:right; margin-right: 5%; margin-top: 10px;">
  {{#link-to "funding" class="get-funds-button"}}Get Funds{{/link-to}}
  {{#link-to "news" class="get-funds-button"}}Crypto News{{/link-to}}
  <button {{action "logout"}} class="logout-button" style="margin-left: 15px;">Logout</button>
</div>

<h2 style="text-align:center; color:#2c3e50;">Live Crypto Dashboard</h2>

<table style="width:50%; margin:auto; border-collapse: collapse; font-family: Arial;">
  <thead>
    <tr style="background-color: #34495e; color: white;">
      <th style="padding: 12px; width: 40%;">Name</th>
      <th style="width: 30%;">Price (USD)</th>
      <th style="width: 30%;">Change (%)</th>
    </tr>
  </thead>  
  <tbody>
    {{#each model.cryptos as |crypto|}}
     <tr  
       {{action "goToCrypto" crypto.id crypto.priceUsd crypto.changePercent24Hr}} 
       style="cursor:pointer;" 
       onmouseover="this.style.background='#f4f4f4'" 
       onmouseout="this.style.background='white'"
     >
        <td style="padding: 10px; display: flex; align-items: center; gap: 10px;">
          <img 
            class="crypto-icon"
            src="{{crypto.iconUrl}}" 
            onerror="this.onerror=null;this.src='/eth.png';"
            alt="{{crypto.symbol}}" 
          >
          <span style="white-space: nowrap;">{{crypto.name}}</span>
        </td>

        <td style="text-align: center;">
          ${{crypto.priceUsd}}
        </td>

        <td style="text-align: center; color:{{if (is-negative crypto.changePercent24Hr) "red" "green"}};">
          {{crypto.changePercent24Hr}}%
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
